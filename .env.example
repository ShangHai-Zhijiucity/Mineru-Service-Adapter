# MinerU Controller env template

# Worker & controller
MINERU_WORKER_COUNT=1
START_PORT=6000
CUDA_VISIBLE_DEVICES=0
CONTROLLER_PORT=58001
TASK_TIMEOUT_SECONDS=300

# MinIO connection
MINIO_ENDPOINT=minio:59000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Optional: local MinIO bootstrap creds (if using bundled MinIO)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Internal auth token used when sending callbacks to backend
MINERU_INTERNAL_TOKEN=change_me

# Optional default callback URL if client omits callback_url
MINERU_DEFAULT_CALLBACK_URL=http://backend:58000/api/v1/mineru/callback
